<Application
    x:Class="FanKit.App"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:FanKit"
    xmlns:controls="using:Microsoft.Toolkit.Uwp.UI.Controls"
>

    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="ms-appx:///Style/Bursh.xaml"/>
                <ResourceDictionary Source="ms-appx:///Style/Style.xaml"/>
                <ResourceDictionary Source="ms-appx:///Style/Template.xaml"/>
                <ResourceDictionary Source="ms-appx:///Style/Resource.xaml"/>
            </ResourceDictionary.MergedDictionaries>

            <!--MaxWidth-->
            <x:Double x:Key="AppDetailMaxWidth">700</x:Double>
            <x:Double x:Key="AppPanelMaxWidth">600</x:Double>
             
        </ResourceDictionary>
    </Application.Resources>
</Application>
